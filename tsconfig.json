{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src/",
    "paths": {
      "@/components/*": ["components/*"],
      "@/domain/*": ["domain/*"],
      "@/pages/*": ["pages/*"],
      "@/styles/*": ["styles/*"],
      "@/public/*": ["public/*"],
      "@/main/*": ["main/*"],
      "@/hooks/*": ["hooks/*"],
      "@/__tests__/*": ["__tests__/*"],
      "@/ui/*": ["ui/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "types.d.ts", "src/infra/get-character.jsx"],
  "exclude": ["node_modules"]
}
